<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Галерея мастера</title>
    <style>
        /* Общие стили */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
        }

        /* Стили контейнера */
        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 10px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        /* Стили галереи */
        .gallery {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
        }

        .gallery-item {
            position: relative;
            width: 200px;
            height: 200px;
            overflow: hidden;
            border-radius: 8px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .gallery-item button {
            position: absolute;
            top: 10px;
            right: 10px;
            padding: 5px 10px;
            background-color: rgba(255, 0, 0, 0.7);
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .gallery-item button:hover {
            background-color: rgba(255, 0, 0, 1);
        }

        /* Стили формы загрузки */
        .upload-form {
            margin: 20px 0;
            text-align: center;
        }

        .upload-form input[type="file"] {
            display: none;
        }

        .upload-form label {
            padding: 10px 20px;
            background-color: #007BFF;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .upload-form label:hover {
            background-color: #0056b3;
        }

        .upload-form button {
            margin-top: 10px;
            padding: 10px 20px;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .upload-form button:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <h1>Галерея мастера</h1>
    {{> masterHeader}}

    <div class="container">
        <div class="upload-form">
            <form id="uploadPhotoForm" action="/gallery/upload" method="post" enctype="multipart/form-data">
                <input type="file" name="photo" id="photo" required>
                <label for="photo">Выбрать фото</label>
                <button type="submit">Загрузить</button>
            </form>
        </div>

        <div class="gallery">
            {{#each gallery}}
                <div class="gallery-item" data-gallery-id="{{GalleryId}}">
                    <img src="data:image/jpeg;base64,{{this.Photo}}" alt="Фото мастер-класса">
                    <button onclick="deletePhoto({{GalleryId}})">Удалить</button>
                </div>
            {{/each}}
        </div>
    </div>

    <script>
        function deletePhoto(galleryId) {
            if (confirm('Вы уверены, что хотите удалить это фото?')) {
                fetch(`/profile/gallery/delete/${galleryId}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.querySelector(`[data-gallery-id='${galleryId}']`).remove();
                    } else {
                        alert('Ошибка при удалении фото');
                    }
                })
                .catch(error => {
                    console.error('Ошибка при удалении фото:', error);
                    alert('Ошибка при удалении фото');
                });
            }
        }

        // Добавление обработки для формы загрузки фотографий
        document.getElementById('uploadPhotoForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const formData = new FormData(this);

            fetch('/profile/gallery/upload', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload(); // Обновляем страницу после успешной загрузки
                } else {
                    alert('Ошибка при загрузке фото');
                }
            })
            .catch(error => {
                console.error('Ошибка при загрузке фото:', error);
                alert('Ошибка при загрузке фото');
            });
        });

        // Обновление метки при выборе файла
        document.getElementById('photo').addEventListener('change', function() {
            const label = document.querySelector('label[for="photo"]');
            if (this.files && this.files.length > 0) {
                label.textContent = this.files[0].name;
            } else {
                label.textContent = 'Выбрать фото';
            }
        });
    </script>
</body>
</html>
